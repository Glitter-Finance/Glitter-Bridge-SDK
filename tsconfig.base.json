{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021.String", "DOM"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "./tests"],
  "typedocoptions": {
    "entryPoints": [
      "./package/core/src/index.ts",
      "./package/server/src/index.ts"
    ],
    "out": "./docs"
  }
}
